{
    "name": "mobile-revolution",
    "private": true,
    "description": "Революция танца - студия современной хореографии",
    "devDependencies": {
        "@htmlacademy/editorconfig-cli": "1.0.0",
        "autoprefixer": "^10.2.6",
        "browser-sync": "^2.26.14",
        "gulp": "4.0.2",
        "gulp-less": "4.0.1",
        "gulp-plumber": "1.2.1",
        "gulp-postcss": "^9.0.0",
        "gulp-sourcemaps": "2.6.5",
        "postcss": "^8.3.2",
        "stylelint": "^13.13.1",
        "stylelint-config-htmlacademy": "0.1.4"
    },
    "scripts": {
        "editorconfig": "editorconfig-cli",
        "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
        "test": "npm run editorconfig && npm run stylelint",
        "build": "gulp styles",
        "start": "gulp"
    },
    "browserslist": [
        "last 2 versions",
        "not dead",
        "not ie <= 11"
    ],
    "editorconfig-cli": [
        "*.json",
        "*.js",
        "source/*.html",
        "source/js/**/*.js",
        "source/img/**/*.svg",
        "source/less/**/*.less"
    ],
    "engines": {
        "node": "12.18.2"
    }
}
